<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<style>
	.memberbox{
	  display: inline-block;
	  min-height: 50px;
	  min-width: 300px;
	  border: 1px solid grey;
	  text-align: center;
	  padding: 12px;
	  margin:10px;
	}
	
	.memberboxSelected{
	  border: 2px solid green;
	}
</style>
<div class="am-popup" id="member-popup">
<div class="am-popup-inner">
   <div class="am-popup-hd">
     <span data-am-modal-close class="am-close">&times;</span>
   </div>
   <div class="am-popup-bd">
   <form class="am-form am-form-horizontal">
		<fieldset>
		  <legend>会员包月</legend>
		  <div class="am-form-group" style="text-align:center">
		  	#foreach($item in $!vipSet) 
		  		<div class="memberbox #if($velocityCount ==1) memberboxSelected #end" 
		  		data1="$item.value"
		  		cashMsg="$!item.cashMsg"
		  		coinsMsg="$!item.coinsMsg">$item.text</div>
		  	#end
		  </div>
		  <div class="am-form-group">
		    <button type="button" class="am-btn am-btn-primary am-fl buy" id="memberBtn"
		    	_type="1" 
		    	_data1="1" 
		    	_reUrl="/my.htm" 
		    	_msg="确定购买会员吗?">&nbsp;&nbsp;金币购买&nbsp;&nbsp;</button>
		    	
		    <a href="#" id="memberLnk" class="am-fr pay" 
		    	_type="1" 
		    	_data1="1" 
		    	_cash="0" 
		    	_reUrl="/my.htm"
		    	_msg="确定购买会员吗?">&nbsp;&nbsp;微信支付&nbsp;&nbsp;</a>
		  </div>
		</fieldset>
	</form>
   </div>
</div>
</div>
<script>
	function showMembership(){
		jQuery("#member-popup").modal();
	}
	
	jQuery(function(){
		jQuery(".memberbox").click(function(){
			jQuery(".memberbox").removeClass("memberboxSelected");
			jQuery(this).addClass("memberboxSelected");
			var data1 = jQuery(this).attr("data1");
			var coinsMsg = jQuery(this).attr("coinsMsg");
			var cashMsg = jQuery(this).attr("cashMsg");
			jQuery("#memberBtn").attr("data1",data1);
			jQuery("#memberBtn").attr("_msg",coinsMsg);
			
			jQuery("#memberLnk").attr("data1",data1);
			jQuery("#memberLnk").attr("_msg",cashMsg);
		});
	});
</script>