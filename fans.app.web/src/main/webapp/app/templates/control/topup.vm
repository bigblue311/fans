<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<style>
	.topupbox{
	  display: inline-block;
	  min-height: 50px;
	  min-width: 120px;
	  border: 1px solid grey;
	  text-align: center;
	  padding-top: 12px;
	  margin:10px;
	}
	
	.topupboxSelected{
	  border: 2px solid green;
	}
</style>
<div class="am-popup" id="topup-popup">
<div class="am-popup-inner">
   <div class="am-popup-hd">
     <span data-am-modal-close class="am-close">&times;</span>
   </div>
   <div class="am-popup-bd">
   <form class="am-form am-form-horizontal">
		<fieldset>
		  <legend>会员充值</legend>
		  <div class="am-form-group" style="text-align:center">
		  	#foreach($item in $!topupSet) 
		  		<div class="topupbox #if($velocityCount ==1) topupboxSelected #end" 
		  		cash="$item.value"
		  		cashMsg="$!item.cashMsg">$item.text</div>
		  	#end
		  </div>
		  <div class="am-form-group">
		    <button type="button" class="am-btn am-btn-primary am-fr pay" id="topupBtn"
		    	_type="0" 
		    	_data1="" 
		    	_cash="10" 
		    	_msg="确定充值吗?" 
		    	_reUrl="/my.htm">&nbsp;&nbsp;确定&nbsp;&nbsp;</button>
		  </div>
		</fieldset>
	</form>
   </div>
</div>
</div>
<script>
	function showTopup(){
		jQuery("#topup-popup").modal();
	}
	
	jQuery(function(){
		jQuery(".topupbox").click(function(){
			jQuery(".topupbox").removeClass("topupboxSelected");
			jQuery(this).addClass("topupboxSelected");
			var cash = jQuery(this).attr("cash");
			var cashMsg = jQuery(this).attr("cashMsg");
			
			jQuery("#topupBtn").attr("_cash",cash);
			jQuery("#topupBtn").attr("_msg",cashMsg);
		});
	});
</script>